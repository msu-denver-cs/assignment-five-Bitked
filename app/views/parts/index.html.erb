<p id="notice"><%= notice %></p>

<h1>Parts</h1>

<%= form_tag(search_parts_url, method: "get") do %>
    <%= label_tag(:query, "Search by Part:") %>
    <%= text_field_tag :search, params[:search], data: { autocomplete: autocomplete_part_part_parts_path } %>
    <%= submit_tag("Search") %>
<% end %>
    
    <br/><div id="results"></div>

<script>
var QueryURL = "http://localhost:3000/books/search.json?query=";
var ResultsDiv = "results";
var Field = "name";
var QueryTag = "query";
</script>

<script type="text/javascript" src="/javascripts/AJAXSearch.js"></script>


<table>
  <thead>
    <tr>
      <th>Part</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.part %></td>
        <td><%= link_to 'Show', part %></td>
        <td><%= link_to 'Edit', edit_part_path(part) %></td>
        <td><%= link_to 'Destroy', part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


